generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @unique
  stockBalances Json
}

model InrBalances {
  id      Int    @id @default(autoincrement())
  userId  String @unique
  balance Float
  locked  Float
}

model Orderbook {
  symbol String @id @unique
  data   Json
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      String
  type        String
  quantity    Int
  price       Float
  status      String
  stockSymbol String
  filledQty   String
  stockType   String
  createdAt   DateTime @default(now())
}
